    "logtoerr"                        : 1,
    "error_log"                       : "tmp/smtp.err",
    "connection"                      : "unix:tmp/authentication_milter_test.sock",
    "umask"                           : "0000",
    "connect_timeout"                 : 55,
    "command_timeout"                 : 55,
    "content_timeout"                 : 595,
